{
  "expo": {
    "name": "TrendFlix",
    "slug": "TrendFlix",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/movie.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Lato-Bold.ttf",
            "./assets/fonts/Lato-Regular.ttf",
            "./assets/fonts/Lato-BoldItalic.ttf"
          ]
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/movie.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}